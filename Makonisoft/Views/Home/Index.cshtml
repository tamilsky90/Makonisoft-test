@model Makonisoft.Models.PersonalInformationDTO
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Personal Information</h1>
    <p id="pmess" class="text-success">@ViewBag.message</p>
</div>
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control-plaintext" })
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control-plaintext" })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
    </div>

    <div class="row ">
        <div class="col-sm-4 text-right">
            @if (Model?.Id > 0)
            {
                <input type="submit" class="btn btn-primary left" value="Update" />
                @Html.HiddenFor(m => m.Id)
            }
            else
            {
                <input type="submit" class="btn btn-primary left" value="Save" />
            }
            @Html.ActionLink("Cancel", "Index",null, new { @class = "btn btn-danger" })
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}